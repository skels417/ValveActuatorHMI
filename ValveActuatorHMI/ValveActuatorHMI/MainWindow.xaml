<Window x:Class="ValveActuatorHMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValveActuatorHMI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:converters="clr-namespace:ValveActuatorHMI.Converters"
        mc:Ignorable="d"
        Title="Valve Actuator HMI" 
        Height="800" 
        Width="1200"
        Style="{DynamicResource MaterialDesignWindow}">

    <Window.Resources>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- Вкладка Dashboard -->
            <TabItem Header="Dashboard">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель состояния подключения -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource MaterialDesignPaper}"
                            CornerRadius="4" 
                            Padding="10" 
                            Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="16" 
                                     Height="16"
                                     Fill="{Binding IsConnected, Converter={StaticResource BooleanToBrushConverter}}"
                                     Margin="0,0,10,0"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding IsConnected, StringFormat='Status: {0}'}" 
                                       VerticalAlignment="Center"
                                       FontSize="14"/>
                            <ComboBox ItemsSource="{Binding AvailablePorts}"
                                      SelectedItem="{Binding SelectedPort}"
                                      Margin="10,0,0,0"
                                      Width="120"
                                      materialDesign:HintAssist.Hint="COM Port"/>
                            <Button Content="Connect" 
                                    Command="{Binding ConnectCommand}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="10,0,0,0"/>
                            <Button Content="Disconnect" 
                                    Command="{Binding DisconnectCommand}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Основное содержимое -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Панель параметров -->
                        <Border Grid.Column="0" 
                                Background="{DynamicResource MaterialDesignPaper}"
                                CornerRadius="4" 
                                Padding="10" 
                                Margin="0,0,10,0">
                            <ScrollViewer>
                                <ItemsControl ItemsSource="{Binding Parameters}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="50"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Value}" 
                                                           Grid.Column="1" 
                                                           HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding Unit}" 
                                                           Grid.Column="2" 
                                                           Margin="5,0,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <!-- Графики -->
                        <Border Grid.Column="1" 
                                Background="{DynamicResource MaterialDesignPaper}"
                                CornerRadius="4" 
                                Padding="10">
                            <lvc:CartesianChart Series="{Binding ChartSeries}" 
                                               LegendLocation="Bottom">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Title="Time" 
                                              Labels="{Binding TimeLabels}"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="Value"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </Border>
                    </Grid>

                    <!-- Панель управления -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,10,0,0">
                        <Button Content="Start" 
                                Command="{Binding StartCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Margin="5"/>
                        <Button Content="Stop" 
                                Command="{Binding StopCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Margin="5"/>
                        <Button Content="Reverse" 
                                Command="{Binding ReverseCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Margin="5"/>
                        <Button Content="Open" 
                                Command="{Binding OpenCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Margin="5"/>
                        <Button Content="Close" 
                                Command="{Binding CloseCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка Settings -->
            <TabItem Header="Settings">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Настройки Modbus -->
                    <GroupBox Grid.Row="0" 
                              Header="Modbus Settings" 
                              Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Slave Address:" 
                                       Margin="5" 
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding SlaveAddress}" 
                                     Margin="5" 
                                     Width="100"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" 
                                       Text="Baud Rate:" 
                                       Margin="5" 
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="0" Grid.Column="3" 
                                      ItemsSource="{Binding BaudRates}" 
                                      SelectedItem="{Binding SelectedBaudRate}" 
                                      Margin="5" 
                                      Width="100"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Parity:" 
                                       Margin="5" 
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" 
                                      ItemsSource="{Binding Parities}" 
                                      SelectedItem="{Binding SelectedParity}" 
                                      Margin="5" 
                                      Width="100"/>

                            <TextBlock Grid.Row="1" Grid.Column="2" 
                                       Text="Data Bits:" 
                                       Margin="5" 
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="1" Grid.Column="3" 
                                      ItemsSource="{Binding DataBits}" 
                                      SelectedItem="{Binding SelectedDataBits}" 
                                      Margin="5" 
                                      Width="100"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Stop Bits:" 
                                       Margin="5" 
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" 
                                      ItemsSource="{Binding StopBitsList}" 
                                      SelectedItem="{Binding SelectedStopBits}" 
                                      Margin="5" 
                                      Width="100"/>
                        </Grid>
                    </GroupBox>

                    <!-- Таблица переменных -->
                    <GroupBox Grid.Row="1" 
                              Header="Variable Mapping">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Button Content="Import from Excel" 
                                    Command="{Binding ImportCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,0,10"/>

                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding VariableMaps}" 
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" 
                                                        Binding="{Binding Name}" 
                                                        Width="*"/>
                                    <DataGridTextColumn Header="Address" 
                                                        Binding="{Binding Address}" 
                                                        Width="80"/>
                                    <DataGridTextColumn Header="Type" 
                                                        Binding="{Binding DataType}" 
                                                        Width="80"/>
                                    <DataGridTextColumn Header="Unit" 
                                                        Binding="{Binding Unit}" 
                                                        Width="60"/>
                                    <DataGridTextColumn Header="Scale" 
                                                        Binding="{Binding ScaleFactor}" 
                                                        Width="60"/>
                                    <DataGridTextColumn Header="Offset" 
                                                        Binding="{Binding Offset}" 
                                                        Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Вкладка Logs -->
            <TabItem Header="Logs">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления логами -->
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="0,0,0,10">
                        <TextBox Text="{Binding LogSearchText}" 
                                 Width="200" 
                                 Margin="0,0,10,0" 
                                 materialDesign:HintAssist.Hint="Search logs..."/>
                        <Button Content="Search" 
                                Command="{Binding SearchLogsCommand}" 
                                Margin="0,0,10,0"
                                Style="{StaticResource MaterialDesignFlatButton}"/>
                        <Button Content="Clear Logs" 
                                Command="{Binding ClearLogsCommand}"
                                Style="{StaticResource MaterialDesignFlatButton}"/>
                    </StackPanel>

                    <!-- Таблица логов -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding LogEntries}" 
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" 
                                                Binding="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Level" 
                                                Binding="{Binding Level}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Source" 
                                                Binding="{Binding Source}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Message" 
                                                Binding="{Binding Message}" 
                                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>